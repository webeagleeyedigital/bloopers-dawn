{% comment %}
  Section: Content cards grid
  - 3 columns x 2 rows on desktop
  - 2 columns on mobile
  - Each block = image + heading + text + link
{% endcomment %}
{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.5 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.5 | round: 0 }}px;
  }

  @media screen and (min-width: 768px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<section id="content-cards-{{ section.id }}" class="content-cards section-{{ section.id }}-padding">
  <div class="content-cards__inner page-width">
    <div class="bloopers-title-wrapper title-wrapper--no-top-margin">
      {%- if section.settings.title != blank -%}
        <h2 class="title inline-richtext {{ section.settings.heading_size }}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
          {{ section.settings.title }}
        </h2>
      {%- endif -%}
      {%- if section.settings.description != blank
        or section.settings.show_description
        and section.settings.collection.description != empty
      -%}
        <div class="bloopers__description {{ section.settings.description_style }} rte {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
          {%- if section.settings.show_description -%}
            {{ section.settings.collection.description }}
          {%- else -%}
            {{ section.settings.description -}}
          {%- endif %}
        </div>
      {%- endif -%}
    </div> 
    <div class="content-cards__grid">
      {% for block in section.blocks %}
        {% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

        <div class="content-cards__item" {{ block.shopify_attributes }}>
          {% style %}
            .ai-content-card-{{ ai_gen_id }} {
              display: flex;
              flex-direction: column;
              height: 100%;
              background-color: {{ block.settings.card_background }};
              border-radius: {{ block.settings.card_border_radius }}px;
              overflow: hidden;
              transition: transform 0.3s ease;
            }

            .ai-content-card-{{ ai_gen_id }}:hover {
              transform: translateY(-4px);
            }

            .ai-content-card-image-wrapper-{{ ai_gen_id }} {
              position: relative;
              width: 100%;
              overflow: hidden;
            }

            .ai-content-card-image-wrapper-{{ ai_gen_id }} img,
            .ai-content-card-image-wrapper-{{ ai_gen_id }} svg {
              width: 100%;
              height: 100%;
              object-fit: cover;
              display: block;
            }

            .ai-content-card-content-{{ ai_gen_id }} {
              padding: 12px 0 0 0;
              display: flex;
              flex-direction: column;
              align-items: center;
              gap: 8px;
              flex-grow: 1;
              text-align: center;
            }

            .ai-content-card-heading-{{ ai_gen_id }} {
              margin: 0;
              font-size: 14px;
              color: {{ block.settings.heading_color }};
            }

            .ai-content-card-text-{{ ai_gen_id }} {
              background: #FD4757;
              margin: 0;
              padding: 4px 6px;
              font-size: 12px;
              color: {{ block.settings.text_color }};
              line-height: 1;
              flex-grow: 1;
            }

            .ai-content-card-link-{{ ai_gen_id }} {
              display: inline-flex;
              align-items: center;
              gap: 8px;
              padding: {{ block.settings.button_padding_vertical }}px {{ block.settings.button_padding_horizontal }}px;
              background-color: {{ block.settings.button_background }};
              color: {{ block.settings.button_text_color }};
              text-decoration: none;
              border-radius: {{ block.settings.button_border_radius }}px;
              font-size: {{ block.settings.button_text_size }}px;
              transition: background-color 0.3s ease;
              align-self: flex-start;
            }

            .ai-content-card-link-{{ ai_gen_id }}:hover {
              background-color: {{ block.settings.button_hover_background }};
            }

            .ai-content-card-link-arrow-{{ ai_gen_id }} {
              width: 16px;
              height: 16px;
              transition: transform 0.3s ease;
            }

            .ai-content-card-link-{{ ai_gen_id }}:hover .ai-content-card-link-arrow-{{ ai_gen_id }} {
              transform: translateX(4px);
            }
            @media(min-width: 992px){
              .ai-content-card-content-{{ ai_gen_id }} {
                padding: {{ block.settings.card_padding }}px 0 0 0;
                gap: {{ block.settings.content_gap }}px;
              }              
              .ai-content-card-heading-{{ ai_gen_id }} {
                font-size: {{ block.settings.heading_size }}px;
              }

              .ai-content-card-text-{{ ai_gen_id }} {
                padding: 4px 10px;
                font-size: {{ block.settings.text_size }}px;
              }            
            }
          {% endstyle %}

          <div class="ai-content-card-{{ ai_gen_id }}">
            <div class="ai-content-card-image-wrapper-{{ ai_gen_id }}">
              {% if block.settings.image %}
                <a href="{{ block.settings.link_url }}">
                <img
                  src="{{ block.settings.image | image_url: width: 800 }}"
                  alt="{{ block.settings.image.alt | escape }}"
                  loading="lazy"
                  width="{{ block.settings.image.width }}"
                  height="{{ block.settings.image.height }}"
                >
                </a>
              {% else %}
                {{ 'image' | placeholder_svg_tag }}
              {% endif %}
            </div>

            <div class="ai-content-card-content-{{ ai_gen_id }}">
              {% if block.settings.heading != blank %}
                <h3 class="ai-content-card-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h3>
              {% endif %}

              {% if block.settings.text != blank %}
                <div class="ai-content-card-text-{{ ai_gen_id }}">{{ block.settings.text }}</div>
              {% endif %}

              {% if block.settings.link_text != blank and block.settings.link_url != blank %}
                <a href="{{ block.settings.link_url }}" class="ai-content-card-link-{{ ai_gen_id }}">
                  {{ block.settings.link_text }}
                  <svg class="ai-content-card-link-arrow-{{ ai_gen_id }}" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M6 12L10 8L6 4" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                  </svg>
                </a>
              {% endif %}
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Content cards grid",
  "tag": "section",
  "class": "content-cards-section",
  "settings": [
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    },
    {
      "type": "header",
      "content": "t:sections.featured-collection.settings.header_text.content"
    },   
    {
      "type": "inline_richtext",
      "id": "title",
      "default": "t:sections.featured-collection.settings.title.default",
      "label": "t:sections.featured-collection.settings.title.label"
    },
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        {
          "value": "h2",
          "label": "t:sections.all.heading_size.options__1.label"
        },
        {
          "value": "h1",
          "label": "t:sections.all.heading_size.options__2.label"
        },
        {
          "value": "h0",
          "label": "t:sections.all.heading_size.options__3.label"
        },
        {
          "value": "hxl",
          "label": "t:sections.all.heading_size.options__4.label"
        },
        {
          "value": "hxxl",
          "label": "t:sections.all.heading_size.options__5.label"
        }
      ],
      "default": "h1",
      "label": "t:sections.all.heading_size.label"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "t:sections.featured-collection.settings.description.label"
    },
    {
      "type": "checkbox",
      "id": "show_description",
      "label": "t:sections.featured-collection.settings.show_description.label",
      "default": false   
    },
    {
      "type": "select",
      "id": "description_style",
      "label": "t:sections.featured-collection.settings.description_style.label",
      "options": [
        {
          "value": "body",
          "label": "t:sections.featured-collection.settings.description_style.options__1.label"
        },
        {
          "value": "subtitle",
          "label": "t:sections.featured-collection.settings.description_style.options__2.label"
        },
        {
          "value": "uppercase",
          "label": "t:sections.featured-collection.settings.description_style.options__3.label"
        }
      ],
      "default": "body"
    },       
  ],
  "blocks": [
    {
      "type": "card",
      "name": "Card",
      "settings": [
        {
          "type": "header",
          "content": "Image"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "header",
          "content": "Content"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Card heading"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Text",
          "default": "Add a description for this card. Use this space to highlight key features or benefits."
        },
        {
          "type": "header",
          "content": "Link"
        },
        {
          "type": "text",
          "id": "link_text",
          "label": "Link text",
          "default": "Learn more"
        },
        {
          "type": "url",
          "id": "link_url",
          "label": "Link URL"
        },
        {
          "type": "header",
          "content": "Card style"
        },
        {
          "type": "color",
          "id": "card_background",
          "label": "Background",
          "default": "#ffffff"
        },
        {
          "type": "range",
          "id": "card_border_radius",
          "min": 0,
          "max": 40,
          "step": 2,
          "unit": "px",
          "label": "Border radius",
          "default": 0
        },
        {
          "type": "range",
          "id": "card_padding",
          "min": 10,
          "max": 50,
          "step": 5,
          "unit": "px",
          "label": "Padding",
          "default": 20
        },
        {
          "type": "range",
          "id": "content_gap",
          "min": 8,
          "max": 32,
          "step": 4,
          "unit": "px",
          "label": "Content spacing",
          "default": 16
        },
        {
          "type": "header",
          "content": "Heading style"
        },
        {
          "type": "range",
          "id": "heading_size",
          "min": 14,
          "max": 40,
          "step": 2,
          "unit": "px",
          "label": "Size",
          "default": 24
        },
        {
          "type": "color",
          "id": "heading_color",
          "label": "Color",
          "default": "#000000"
        },
        {
          "type": "header",
          "content": "Text style"
        },
        {
          "type": "range",
          "id": "text_size",
          "min": 12,
          "max": 24,
          "step": 1,
          "unit": "px",
          "label": "Size",
          "default": 16
        },
        {
          "type": "color",
          "id": "text_color",
          "label": "Color",
          "default": "#666666"
        },
        {
          "type": "header",
          "content": "Button style"
        },
        {
          "type": "range",
          "id": "button_text_size",
          "min": 12,
          "max": 20,
          "step": 1,
          "unit": "px",
          "label": "Text size",
          "default": 14
        },
        {
          "type": "range",
          "id": "button_padding_vertical",
          "min": 6,
          "max": 20,
          "step": 2,
          "unit": "px",
          "label": "Vertical padding",
          "default": 10
        },
        {
          "type": "range",
          "id": "button_padding_horizontal",
          "min": 12,
          "max": 40,
          "step": 4,
          "unit": "px",
          "label": "Horizontal padding",
          "default": 20
        },
        {
          "type": "color",
          "id": "button_background",
          "label": "Background",
          "default": "#008fb1"
        },
        {
          "type": "color",
          "id": "button_hover_background",
          "label": "Hover background",
          "default": "#006d8a"
        },
        {
          "type": "color",
          "id": "button_text_color",
          "label": "Text color",
          "default": "#ffffff"
        },
        {
          "type": "range",
          "id": "button_border_radius",
          "min": 0,
          "max": 40,
          "step": 2,
          "unit": "px",
          "label": "Border radius",
          "default": 0
        }
      ]
    }
  ],
  "max_blocks": 6,
  "presets": [
    {
      "name": "Content cards grid",
      "blocks": [
        { "type": "card" },
        { "type": "card" },
        { "type": "card" }
      ]
    }
  ]
}
{% endschema %}

{% stylesheet %}
.content-cards__grid {
  display: grid;
  grid-template-columns: repeat(2, minmax(0, 1fr));
  gap: 14px;
}

@media screen and (min-width: 768px) {
  .content-cards__grid {
    grid-template-columns: repeat(3, minmax(0, 1fr));
    gap: 24px;    
  }
}
{% endstylesheet %}
