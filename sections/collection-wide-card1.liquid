{% comment %}
  Section: Promo cards slider (mobile/tablet) + grid (desktop)
  - Mobile (<768px): horizontal slider, ~2 cards visible, 20px right offset
  - Tablet (768–991px): slider, ~3 cards visible
  - Desktop (>=992px): 3‑column grid, no slider
{% endcomment %}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 768px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<section id="promo-cards-{{ section.id }}" class="promo-cards-section section-{{ section.id }}-padding">
  <div class="promo-cards-section__inner page-width">

    {%- comment -%}
      MOBILE/TABLET SLIDER (hidden on desktop)
    {%- endcomment -%}
    <div class="promo-cards-slider">
      <div class="promo-cards-slider__track">
        {% for block in section.blocks %}
          {% assign promo_id = block.id | replace: '_', '' | downcase %}

          <div class="promo-cards-slider__slide" {{ block.shopify_attributes }}>
            {% style %}
              .promo-card-{{ promo_id }} {
                display: flex;
                flex-direction: column;
                height: 100%;
                background-color: {{ block.settings.card_background }};
                border-radius: {{ block.settings.card_border_radius }}px;
                overflow: hidden;
                transition: transform 0.3s ease;
              }
              .promo-card-{{ promo_id }}:hover {
                transform: translateY(-4px);
              }

              .promo-card__image-wrapper-{{ promo_id }} {
                position: relative;
                width: 100%;
                overflow: hidden;
              }
              .promo-card__image-wrapper-{{ promo_id }} img,
              .promo-card__image-wrapper-{{ promo_id }} svg {
                width: 100%;
                height: 100%;
                object-fit: cover;
                display: block;
              }

              .promo-card__content-{{ promo_id }} {
                padding: 12px 0 0 0;
                display: flex;
                flex-direction: column;
                align-items: center;
                gap: 8px;
                flex-grow: 1;
                text-align: center;
              }

              .promo-card__heading-{{ promo_id }} {
                margin: 0;
                font-size: 16px;
                font-weight: 600;
                color: {{ block.settings.heading_color }};
                position: absolute;
                bottom: 20px;
                left: 0;
                transform: translateX(50%);
              }
              @media (min-width: 992px) {
                .promo-card__heading-{{ promo_id }} {
                  font-size: {{ block.settings.heading_size }}px;
                }
              }
            {% endstyle %}

            <article class="promo-card-{{ promo_id }}">
              <div class="promo-card__image-wrapper-{{ promo_id }}">
                {% if block.settings.image %}
                  <a href="{{ block.settings.link_url }}">
                    <img
                      src="{{ block.settings.image | image_url: width: 800 }}"
                      alt="{{ block.settings.image.alt | escape }}"
                      loading="lazy"
                      width="{{ block.settings.image.width }}"
                      height="{{ block.settings.image.height }}"
                    >
                  </a>
                {% else %}
                  {{ 'image' | placeholder_svg_tag }}
                {% endif %}
              </div>

              <div class="promo-card__content-{{ promo_id }}">
                {% if block.settings.heading != blank %}
                  <h3 class="promo-card__heading-{{ promo_id }}">{{ block.settings.heading }}</h3>
                {% endif %}

                {% if block.settings.text != blank %}
                  <div class="promo-card__tag-{{ promo_id }}">{{ block.settings.text }}</div>
                {% endif %}

                {% if block.settings.link_text != blank and block.settings.link_url != blank %}
                  <a href="{{ block.settings.link_url }}" class="promo-card__link-{{ promo_id }}">
                    {{ block.settings.link_text }}
                    <svg class="promo-card__link-icon-{{ promo_id }}" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
                      <path d="M6 12L10 8L6 4" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>
                  </a>
                {% endif %}
              </div>
            </article>
          </div>
        {% endfor %}
      </div>
    </div>

    {%- comment -%}
      DESKTOP GRID (3 columns, no slider)
    {%- endcomment -%}
    <div class="promo-cards-grid">
      {% for block in section.blocks %}
        {% assign promo_id = block.id | replace: '_', '' | downcase %}
        <div class="promo-cards-grid__item" {{ block.shopify_attributes }}>
          <article class="promo-card-{{ promo_id }}">
            <div class="promo-card__image-wrapper-{{ promo_id }}">
              {% if block.settings.image %}
                <a href="{{ block.settings.link_url }}">
                  <img
                    src="{{ block.settings.image | image_url: width: 800 }}"
                    alt="{{ block.settings.image.alt | escape }}"
                    loading="lazy"
                    width="{{ block.settings.image.width }}"
                    height="{{ block.settings.image.height }}"
                  >
                </a>
              {% else %}
                {{ 'image' | placeholder_svg_tag }}
              {% endif %}
              {% if block.settings.heading != blank %}
                <h3 class="promo-card__heading-{{ promo_id }}">{{ block.settings.heading }}</h3>
              {% endif %}              
            </div>
          </article>
        </div>
      {% endfor %}
    </div>

  </div>
</section>

