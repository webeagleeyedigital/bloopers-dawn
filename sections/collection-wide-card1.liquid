{% stylesheet %}
  /* MOBILE/TABLET SLIDER: show slider, hide grid */
  .promo-cards-slider {
    display: block;
    margin-right: -20px;
    padding-right: 20px;
    overflow-x: auto;
    -webkit-overflow-scrolling: touch;
  }
  .promo-cards-slider__track {
    display: flex;
    gap: 14px;
  }
  .promo-cards-slider__slide {
    flex: 0 0 calc(50% - 10px); /* ~2 slides per view on small mobile */
  }

  .promo-cards-grid {
    display: none;
  }

  @media screen and (min-width: 768px) and (max-width: 991.98px) {
    .promo-cards-slider__slide {
      flex: 0 0 calc(33.333% - 12px); /* ~3 slides per view on tablet */
    }
  }

  /* DESKTOP GRID: show grid, hide slider */
  @media screen and (min-width: 992px) {
    .promo-cards-slider {
      display: none;
    }
    .promo-cards-grid {
      display: grid;
      grid-template-columns: repeat(4, minmax(0, 1fr));
      gap: 24px;
    }
    .promo-cards-grid__item {
      height: 100%;
    }
  }
{% endstylesheet %}
