{% doc %}
  @prompt
    Create an breadcrumb section for all the pages
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-breadcrumb-{{ ai_gen_id }} {
    padding: {{ block.settings.padding_top }}px 0 {{ block.settings.padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-breadcrumb-container-{{ ai_gen_id }} {
    margin: 0 auto;
  }

  .ai-breadcrumb-list-{{ ai_gen_id }} {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    list-style: none;
    margin: 0;
    padding: 0;
    gap: {{ block.settings.item_spacing }}px;
    font-size: {{ block.settings.font_size }}px;
  }

  .ai-breadcrumb-item-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: {{ block.settings.item_spacing }}px;
  }

  .ai-breadcrumb-link-{{ ai_gen_id }} {
    color: {{ block.settings.link_color }};
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .ai-breadcrumb-link-{{ ai_gen_id }}:hover {
    color: {{ block.settings.link_hover_color }};
    text-decoration: {% if block.settings.underline_on_hover %}underline{% else %}none{% endif %};
  }

  .ai-breadcrumb-separator-{{ ai_gen_id }} {
    color: {{ block.settings.separator_color }};
    user-select: none;
  }

  .ai-breadcrumb-current-{{ ai_gen_id }} {
    color: {{ block.settings.current_page_color }};
  }

  .ai-breadcrumb-home-icon-{{ ai_gen_id }} {
    width: {{ block.settings.font_size }}px;
    height: {{ block.settings.font_size }}px;
    display: inline-block;
    vertical-align: middle;
  }

  @media screen and (max-width: 767.98px) {
    .ai-breadcrumb-{{ ai_gen_id }} {
      padding: {{ block.settings.padding_top | times: 0.7 }}px 0 {{ block.settings.padding_bottom | times: 0.7 }}px;
    }

    .ai-breadcrumb-list-{{ ai_gen_id }} {
      font-size: {{ block.settings.font_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<nav class="ai-breadcrumb-{{ ai_gen_id }}" aria-label="Breadcrumb" {{ block.shopify_attributes }}>
  <div class="page-width ai-breadcrumb-container-{{ ai_gen_id }}">
    <ol class="ai-breadcrumb-list-{{ ai_gen_id }}">
      <li class="ai-breadcrumb-item-{{ ai_gen_id }}">
        <a href="/" class="ai-breadcrumb-link-{{ ai_gen_id }}" aria-label="Home">
          {% if block.settings.show_home_icon %}
            <span class="ai-breadcrumb-home-icon-{{ ai_gen_id }}">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
                <polyline points="9 22 9 12 15 12 15 22"></polyline>
              </svg>
            </span>
          {% else %}
            {{ block.settings.home_text }}
          {% endif %}
        </a>
      </li>

      {% if template == 'collection' and collection %}
        <li class="ai-breadcrumb-item-{{ ai_gen_id }}">
          <span class="ai-breadcrumb-separator-{{ ai_gen_id }}">{{ block.settings.separator }}</span>
          <span class="ai-breadcrumb-current-{{ ai_gen_id }}">{{ collection.title }}</span>
        </li>

      {% elsif template == 'product' and product %}
        {% if collection %}
          <li class="ai-breadcrumb-item-{{ ai_gen_id }}">
            <span class="ai-breadcrumb-separator-{{ ai_gen_id }}">{{ block.settings.separator }}</span>
            <a href="{{ collection.url }}" class="ai-breadcrumb-link-{{ ai_gen_id }}">{{ collection.title }}</a>
          </li>
        {% endif %}
        <li class="ai-breadcrumb-item-{{ ai_gen_id }}">
          <span class="ai-breadcrumb-separator-{{ ai_gen_id }}">{{ block.settings.separator }}</span>
          <span class="ai-breadcrumb-current-{{ ai_gen_id }}">{{ product.title }}</span>
        </li>

      {% elsif template == 'blog' and blog %}
        <li class="ai-breadcrumb-item-{{ ai_gen_id }}">
          <span class="ai-breadcrumb-separator-{{ ai_gen_id }}">{{ block.settings.separator }}</span>
          <span class="ai-breadcrumb-current-{{ ai_gen_id }}">{{ blog.title }}</span>
        </li>

      {% elsif template == 'article' and article %}
        <li class="ai-breadcrumb-item-{{ ai_gen_id }}">
          <span class="ai-breadcrumb-separator-{{ ai_gen_id }}">{{ block.settings.separator }}</span>
          <a href="{{ blog.url }}" class="ai-breadcrumb-link-{{ ai_gen_id }}">{{ blog.title }}</a>
        </li>
        <li class="ai-breadcrumb-item-{{ ai_gen_id }}">
          <span class="ai-breadcrumb-separator-{{ ai_gen_id }}">{{ block.settings.separator }}</span>
          <span class="ai-breadcrumb-current-{{ ai_gen_id }}">{{ article.title }}</span>
        </li>

      {% elsif template == 'page' and page %}
        <li class="ai-breadcrumb-item-{{ ai_gen_id }}">
          <span class="ai-breadcrumb-separator-{{ ai_gen_id }}">{{ block.settings.separator }}</span>
          <span class="ai-breadcrumb-current-{{ ai_gen_id }}">{{ page.title }}</span>
        </li>

      {% elsif template == 'cart' %}
        <li class="ai-breadcrumb-item-{{ ai_gen_id }}">
          <span class="ai-breadcrumb-separator-{{ ai_gen_id }}">{{ block.settings.separator }}</span>
          <span class="ai-breadcrumb-current-{{ ai_gen_id }}">Cart</span>
        </li>

      {% elsif template == 'search' %}
        <li class="ai-breadcrumb-item-{{ ai_gen_id }}">
          <span class="ai-breadcrumb-separator-{{ ai_gen_id }}">{{ block.settings.separator }}</span>
          <span class="ai-breadcrumb-current-{{ ai_gen_id }}">Search</span>
        </li>

      {% elsif template == 'customers/account' %}
        <li class="ai-breadcrumb-item-{{ ai_gen_id }}">
          <span class="ai-breadcrumb-separator-{{ ai_gen_id }}">{{ block.settings.separator }}</span>
          <span class="ai-breadcrumb-current-{{ ai_gen_id }}">Account</span>
        </li>

      {% elsif template == 'customers/login' %}
        <li class="ai-breadcrumb-item-{{ ai_gen_id }}">
          <span class="ai-breadcrumb-separator-{{ ai_gen_id }}">{{ block.settings.separator }}</span>
          <span class="ai-breadcrumb-current-{{ ai_gen_id }}">Login</span>
        </li>

      {% elsif template == 'customers/register' %}
        <li class="ai-breadcrumb-item-{{ ai_gen_id }}">
          <span class="ai-breadcrumb-separator-{{ ai_gen_id }}">{{ block.settings.separator }}</span>
          <span class="ai-breadcrumb-current-{{ ai_gen_id }}">Register</span>
        </li>

      {% elsif template == 'customers/order' %}
        <li class="ai-breadcrumb-item-{{ ai_gen_id }}">
          <span class="ai-breadcrumb-separator-{{ ai_gen_id }}">{{ block.settings.separator }}</span>
          <a href="/account" class="ai-breadcrumb-link-{{ ai_gen_id }}">Account</a>
        </li>
        <li class="ai-breadcrumb-item-{{ ai_gen_id }}">
          <span class="ai-breadcrumb-separator-{{ ai_gen_id }}">{{ block.settings.separator }}</span>
          <span class="ai-breadcrumb-current-{{ ai_gen_id }}">Order</span>
        </li>

      {% elsif template == 'list-collections' %}
        <li class="ai-breadcrumb-item-{{ ai_gen_id }}">
          <span class="ai-breadcrumb-separator-{{ ai_gen_id }}">{{ block.settings.separator }}</span>
          <span class="ai-breadcrumb-current-{{ ai_gen_id }}">Collections</span>
        </li>

      {% elsif template == '404' %}
        <li class="ai-breadcrumb-item-{{ ai_gen_id }}">
          <span class="ai-breadcrumb-separator-{{ ai_gen_id }}">{{ block.settings.separator }}</span>
          <span class="ai-breadcrumb-current-{{ ai_gen_id }}">Page not found</span>
        </li>
      {% endif %}
    </ol>
  </div>
</nav>

{% schema %}
{
  "name": "Breadcrumb",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "home_text",
      "label": "Home text",
      "default": "Home"
    },
    {
      "type": "checkbox",
      "id": "show_home_icon",
      "label": "Show home icon",
      "default": true
    },
    {
      "type": "text",
      "id": "separator",
      "label": "Separator",
      "default": "/"
    },
    {
      "type": "header",
      "content": "Style"
    },
    {
      "type": "range",
      "id": "font_size",
      "min": 10,
      "max": 24,
      "step": 1,
      "unit": "px",
      "label": "Font size",
      "default": 14
    },
    {
      "type": "range",
      "id": "item_spacing",
      "min": 4,
      "max": 20,
      "step": 2,
      "unit": "px",
      "label": "Item spacing",
      "default": 8
    },
    {
      "type": "checkbox",
      "id": "underline_on_hover",
      "label": "Underline links on hover",
      "default": true
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "link_color",
      "label": "Link",
      "default": "#121212"
    },
    {
      "type": "color",
      "id": "link_hover_color",
      "label": "Link hover",
      "default": "#008fb1"
    },
    {
      "type": "color",
      "id": "current_page_color",
      "label": "Current page",
      "default": "#666666"
    },
    {
      "type": "color",
      "id": "separator_color",
      "label": "Separator",
      "default": "#999999"
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding top",
      "default": 20
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding bottom",
      "default": 20
    }
  ],
  "presets": [
    {
      "name": "Breadcrumb"
    }
  ]
}
{% endschema %}
