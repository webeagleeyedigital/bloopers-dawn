<script>
  (function() {
    class MegaMenu{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.currentSlide = 0;
        this.autoplayInterval = null;
      }

      connectedCallback() {
        this.trigger = this.querySelector('.ai-mega-menu__trigger-{{ ai_gen_id }}');
        this.dropdown = this.querySelector('.ai-mega-menu__dropdown-{{ ai_gen_id }}');
        this.track = this.querySelector('.ai-mega-menu__carousel-track-{{ ai_gen_id }}');
        this.dots = this.querySelectorAll('.ai-mega-menu__carousel-dot-{{ ai_gen_id }}');
        this.slides = this.querySelectorAll('.ai-mega-menu__product-card-{{ ai_gen_id }}');

        this.setupEventListeners();
        this.startAutoplay();
      }

      setupEventListeners() {
        this.addEventListener('mouseenter', () => {
          this.trigger.setAttribute('aria-expanded', 'true');
        });

        this.addEventListener('mouseleave', () => {
          this.trigger.setAttribute('aria-expanded', 'false');
        });

        this.dots.forEach((dot) => {
          dot.addEventListener('click', () => {
            const index = parseInt(dot.dataset.index);
            this.goToSlide(index);
            this.resetAutoplay();
          });
        });
      }

      goToSlide(index) {
        if (!this.track || this.slides.length === 0) return;

        this.currentSlide = index;
        const offset = -100 * index;
        this.track.style.transform = `translateX(${offset}%)`;

        this.dots.forEach((dot, i) => {
          if (i === index) {
            dot.classList.add('active');
          } else {
            dot.classList.remove('active');
          }
        });
      }

      startAutoplay() {
        if (this.slides.length <= 1) return;

        this.autoplayInterval = setInterval(() => {
          const nextSlide = (this.currentSlide + 1) % this.slides.length;
          this.goToSlide(nextSlide);
        }, 3000);
      }

      resetAutoplay() {
        if (this.autoplayInterval) {
          clearInterval(this.autoplayInterval);
          this.startAutoplay();
        }
      }

      disconnectedCallback() {
        if (this.autoplayInterval) {
          clearInterval(this.autoplayInterval);
        }
      }
    }

    customElements.define('mega-menu-{{ ai_gen_id }}', MegaMenu{{ ai_gen_id }});
  })();
</script>

